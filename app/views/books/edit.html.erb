<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <div class="error">
    <h4>error: </h4>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model:@book, local: true do |f| %>
  <div class="text_field">
    <label>Title</label>
    <%= f.text_field :title %>
  </div>

  <div class="text_field">
  <label>Body</label>
  <%= f.text_area :body %>
  </div>

  <div class="button"><%= f.submit "Update Book" %></div>

<% end %>

<%= link_to "Show", book_path(@book) %>
<span> | </span>
<%= link_to "Back", books_path %>