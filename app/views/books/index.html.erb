<% if flash[:notice] %>
  <p class="notice"><%= flash[:notice] %></p>
<% end %>

<h1>Books</h1>
<br>
<table>

  <thead>
    <tr>
      <th><u>Title</u></th>
      <th><u>Body</u></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show", book_path(book.id) %></td>
        <td><%= link_to "Edit", edit_book_path(book.id) %></td>
        <td><%= link_to "Destroy", book_path(book.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>

</table>

<br><br>
<h2>New Book</h2>

<% if @book.errors.any? %>
  <div class="error">
    <h4>error: </h4>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="new">
  <%= form_with model:@book, local: true do |f| %>

    <div class="text_field">
    <label>Title</label>
    <%= f.text_field :title %>
    </div>

    <div class="text_field">
    <label>Body</label>
    <%= f.text_area :body %>
    </div>

    <div class="button"><%= f.submit "Create Book" %></div>
  <% end %>
</div>